{% extends "::base.html.twig" %}

{% block title %}AppBundle:AddressProfile:modify{% endblock %}

{% block body %}
    <div class="container" id="main">
        <form action="/createContact" method="POST">
            <label>Name:</label><br>
            <input type="text" name="name" value=""><br>
            <label>Surname:</label><br>
            <input type="text" name="surname" value=""><br>
            <label>Phone number:</label><br>
            <input type="tel" name="phoneNumber" value=""><br>
            <label>Email:</label><br>
            <input type="email" name="email" value=""><br>
            <label>Description:</label><br>
            <textarea name="description" rows="5" cols="20"></textarea><br>
            <label>Address:</label><br>
            <input type="text" name="street" value="" placeholder="Street">
            <input type="text" name="homeNum" value="" placeholder="Home Number"><br>
            <input type="text" name="city" value="" placeholder="City"><br><br>
            <input class="btn btn-light" type="submit" value="Save">
        </form>
    </div>
{% endblock %}
